---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h1"> {
  title: string;
}

const { title, class: attrClass, ...attrs } = Astro.props;
---

<h1
  {...attrs}
  class={cn("text-6xl font-bold text-slate-100 text-opacity-90", attrClass)}
>
  {title}
</h1>
