---
import { cva, type VariantProps } from "class-variance-authority";

const styles = cva("w-fit text-lg font-medium transition-all", {
  variants: {
    isActive: {
      true: "text-primary-500",
      false: "text-neutral-500 hover:text-primary-500 hover:opacity-80",
    },
  },
});

export interface Link extends VariantProps<typeof styles> {
  href: string;
  text: string;
}

type Props = Link;

const { href, text, isActive } = Astro.props;
---

<a href={href} class={styles({ isActive })}>{text}</a>
