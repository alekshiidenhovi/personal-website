---
import SectionLink, { type Link } from "@/components/SectionLink.astro";

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<aside class="flex flex-col">
  <span class="flex text-lg font-semibold text-neutral-400"
    >Table of Contents</span
  >
  {links.map((link) => <SectionLink href={link.href}>{link.text}</SectionLink>)}
</aside>
