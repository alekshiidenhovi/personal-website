---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  Markdown: AstroComponentFactory;
}

const { Markdown } = Astro.props;
---

<article>
  <Markdown />
</article>

<style is:global>
  article {
    @apply prose prose-xl prose-neutral dark:prose-invert h-full w-full overflow-y-auto;
  }

  h2 {
    @apply text-slate-200;
  }

  p {
    @apply text-slate-400;
  }

  p:nth-child(1) {
    @apply mt-0;
  }
</style>
