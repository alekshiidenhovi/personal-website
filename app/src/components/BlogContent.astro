---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  Markdown: AstroComponentFactory;
}

const { Markdown } = Astro.props;
---

<article>
  <Markdown />
</article>

<style is:global>
  article {
    @apply h-full w-full overflow-y-auto;
  }

  h2 {
    @apply pb-6 text-4xl font-bold text-slate-200;
  }

  p {
    @apply pb-12 text-lg text-slate-400;
  }
</style>
