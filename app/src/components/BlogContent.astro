---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  Markdown: AstroComponentFactory;
}

const { Markdown } = Astro.props;
---

<article>
  <Markdown />
</article>

<style is:global>
  article {
    @apply prose prose-xl prose-neutral h-full w-full pb-12 dark:prose-invert prose-headings:text-slate-200;
  }

  p,
  ul,
  ol {
    @apply text-slate-400;
  }

  p:nth-child(1) {
    @apply mt-0;
  }

  strong {
    @apply font-semibold text-primary-400;
  }

  article a {
    @apply text-primary-500 transition-all visited:text-primary-700 hover:text-primary-400 visited:hover:text-primary-400 active:text-primary-600 visited:active:text-primary-600;
  }
</style>
